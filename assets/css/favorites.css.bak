/*
  /assets/css/favorites.css
  (Final, Refined Version - Fully compliant with the design system)
*/

/* --- 1. Page Header & Actions --- */
.page-actions .btn {
    padding: 0.6rem 1rem;
    border-radius: 0.5rem;
    font-size: 0.875rem;
    font-weight: 700;
    transition: all 0.2s ease;
}
/* "Clear All" Button - A consistent destructive action style */
.page-actions .btn-danger {
    background-color: #D32F2F;
    color: var(--c-text-on-dark);
    border: 1px solid transparent;
}
.page-actions .btn-danger:hover {
    background-color: #C62828;
}
/* "Remove Selected" Button */
.page-actions .btn-secondary {
    background-color: var(--c-bg-card);
    border: 1px solid var(--c-border);
    color: var(--c-text-body);
}
.page-actions .btn-secondary:hover {
    background-color: var(--c-bg-main);
}

/* --- 2. Favorite Item Card --- */
/* This card now inherits its base background and border from the global .info-card rule */
.favorite-card {
    position: relative;
    border-radius: 0.75rem;
    transition: all 0.3s ease;
    cursor: pointer;
}
.favorite-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px -5px rgba(74, 66, 59, 0.1) !important;
}

/* IMPROVEMENT: Unified card-image structure */
.favorite-card .card-image {
    aspect-ratio: 1 / 1;
    border-radius: 0.75rem;
    overflow: hidden;
    background-size: cover;
    background-position: center;
    transition: transform 0.4s ease;
}
.favorite-card:hover .card-image {
    transform: scale(1.05);
}

.favorite-card .card-checkbox {
    position: absolute;
    top: 0.75rem; left: 0.75rem;
    z-index: 10;
    height: 1.25rem; width: 1.25rem;
    border-radius: 0.375rem;
    border: 1px solid var(--c-border);
    background-color: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(2px);
    color: var(--c-accent); /* Checkbox color */
}
.favorite-card .card-checkbox:focus {
    ring: var(--c-accent); /* Tailwind class for focus ring */
}

/* --- 3. Empty State --- */
/* IMPROVEMENT: Enhanced visual style for the empty state */
.empty-state {
    text-align: center;
    border: 2px dashed var(--c-border);
    border-radius: 1rem;
    padding: 3rem 2rem;
    margin-top: 2rem;
    background-color: var(--c-bg-card);
}
@media (min-width: 768px) {
    .empty-state {
        padding: 4rem 2rem;
    }
}
.empty-state .icon {
    font-size: 3rem;
    color: var(--c-text-subtle);
}
.empty-state h3 {
    margin-top: 1.5rem;
    font-family: var(--font-primary);
    color: var(--c-text-heading);
}
.empty-state p {
    margin-top: 0.5rem;
    max-width: 400px;
    margin-left: auto;
    margin-right: auto;
    color: var(--c-text-body);
}

/* The button inside the empty state should be a primary button */
.empty-state .btn-primary {
    margin-top: 2rem;
    display: inline-flex;
    padding: 0.75rem 1.5rem;
    background-color: var(--c-accent);
    color: var(--c-text-on-dark);
    border-radius: 0.5rem;
    font-weight: 700;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    box-shadow: 0 2px 8px -2px rgba(139, 94, 60, 0.4);
}
.empty-state .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px -2px rgba(139, 94, 60, 0.4);
}