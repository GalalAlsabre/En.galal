  :root{
    --bg:#f7f3f0;
    --accent:#8b5e3c; /* coffee brown */
    --dark:#2b1f1a;
    --panel:#fff;
    --muted:#8b8b8b;
    --glass: rgba(255,255,255,0.06);
  }

  *{box-sizing:border-box}
  

  .wrap{
    width:1100px;
    max-width:100%;
    display:grid;
    grid-template-columns: 480px 1fr;
    gap:24px;
    align-items:start;
    height:auto;
  }

  /* Left panel: controls */
  .card{
    background:var(--panel);
    border-radius:18px;
    padding:18px;
    box-shadow: 0 6px 22px rgba(22,18,16,0.08);
    border: 1px solid rgba(0,0,0,0.04);
  }

  h1{margin:0 0 6px 0; font-size:20px}
  p.lead{margin:0 0 12px 0; color:var(--muted)}

  .control{
    margin:10px 0 16px 0;
  }
  .control label{
    display:flex;
    justify-content:space-between;
    font-size:14px;
    margin-bottom:6px;
  }

  .range-wrap{display:flex;gap:12px;align-items:center}
  input[type="range"]{
    -webkit-appearance:none;
    width:100%;
    height:8px;
    border-radius:8px;
    background:linear-gradient(90deg,var(--accent) 0%, #e0d3cc 100%);
    outline:none;
  }
  input[type="range"]::-webkit-slider-thumb{
    -webkit-appearance:none;
    width:20px;height:20px;border-radius:50%;
    background:var(--dark); box-shadow:0 2px 6px rgba(0,0,0,0.25);
    border:3px solid #fff;
    margin-top:-6px;
  }
  .value-bubble{
    min-width:64px;text-align:center;background:#fff;padding:6px 8px;border-radius:10px;
    border:1px solid rgba(0,0,0,0.05); font-weight:600;
  }

  .btn{
    display:inline-flex;align-items:center;gap:10px;
    padding:10px 16px;border-radius:12px;background:var(--accent);color:#fff;border:none;
    cursor:pointer;font-weight:700;box-shadow:0 6px 18px rgba(139,94,60,0.18);
  }
  .btn.secondary{
    background:transparent;color:var(--accent);border:1px solid rgba(139,94,60,0.16);
    box-shadow:none;font-weight:700;
  }

  /* Right panel: visual cup + result */
  .visual-wrap{
    display:flex;flex-direction:column;gap:16px;
  }
  .stage{
    background: linear-gradient(180deg,#fff 0%, #f9f6f5 100%);
    border-radius:18px;padding:20px;border:1px solid rgba(0,0,0,0.04);
    display:flex;gap:18px;align-items:center;
  }

  .cup-area{
    width:320px;max-width:100%;display:flex;flex-direction:column;align-items:center;
    gap:10px;padding:6px;
  }

  /* simple coffee cup svg container */
  .cup{
    width:200px;height:220px;position:relative;
  }
  .cup svg{width:100%;height:100%;display:block}

  /* coffee liquid color will change by JS adjusting css variable */
  .liquid{
    transition:all 600ms cubic-bezier(.2,.9,.2,1);
  }

  .steam{
    position:absolute;top:-22px;left:50%;transform:translateX(-50%);
    width:120px;height:80px;pointer-events:none;opacity:0;
  }
  .steam .s{animation:steamUp 2.8s linear infinite;opacity:0.9}
  @keyframes steamUp{
    0%{transform:translateY(12px) scale(0.9); opacity:0}
    20%{opacity:0.45}
    60%{transform:translateY(-18px) scale(1.04); opacity:0.7}
    100%{transform:translateY(-44px) scale(1.2); opacity:0}
  }

  .result{
    padding:12px;border-radius:12px;background:linear-gradient(180deg,#fff,#fff0);
    text-align:center;
  }
  .score{
    font-size:40px;font-weight:800;color:var(--dark);margin:6px 0;
  }
  .verdict{font-weight:700;color:var(--accent);margin-bottom:6px}
  .desc{color:var(--muted);font-size:14px}

  .meta{
    display:flex;justify-content:space-between;align-items:center;margin-top:8px;
  }

  /* responsive */
  @media (max-width:980px){
    .wrap{grid-template-columns:1fr; padding-bottom:40px}
    .cup-area{order:2}
  }

  /* tiny helper styles */
  .row{display:flex;gap:10px;align-items:center}
  .small{font-size:13px;color:var(--muted)}
  .share{cursor:pointer;text-decoration:underline;color:var(--accent);font-weight:700;background:none;border:none}
  
  
  
  