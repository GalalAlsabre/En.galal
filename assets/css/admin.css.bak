/* --- 9. Form Section Styles (NEW) --- */
/* This class is new and does not conflict with anything. */
/* It's used to structure content INSIDE an .admin-card */
.form-section {
    padding: 1.5rem; /* 24px */
}
.form-section:not(:last-child) {
    border-bottom: 1px solid var(--admin-border);
}
.form-section h3 {
    font-size: 1.125rem; /* 18px */
    font-weight: 600;
    color: var(--admin-text-primary);
    margin-bottom: 1.5rem;
}

/* --- 10. Form Elements (NEW & NON-CONFLICTING) --- */
/* These styles will apply to inputs and buttons on settings/edit pages */
.settings-form .form-input {
    width: 100%;
    height: 3rem; /* 48px */
    padding: 0 1rem;
    border: 1px solid var(--admin-border);
    border-radius: 8px;
    background-color: var(--admin-bg); /* Match the main page background */
    color: var(--admin-text-primary);
    transition: all 0.2s ease;
}
.settings-form .form-input:focus {
    outline: none;
    border-color: var(--admin-accent);
    box-shadow: 0 0 0 3px rgba(163, 127, 91, 0.2);
}
.settings-form .btn-primary {
    padding: 0.6rem 1.5rem;
    background-color: var(--admin-accent);
    color: white;
    border: none;
    border-radius: 0.5rem;
    font-weight: 700;
    transition: background-color 0.2s ease;
}
.settings-form .btn-primary:hover {
    background-color: var(--admin-accent-hover);
}

/* --- 11. Form Footer (NEW) --- */
.form-footer {
    display: flex;
    justify-content: flex-end;
    padding: 1rem 1.5rem;
    background-color: var(--admin-bg); /* Match the main page background */
    border-top: 1px solid var(--admin-border);
}

