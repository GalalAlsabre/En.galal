/* --- 13. Refined Table Styles for Articles/Recipes --- */
.content-table {
    width: 100%;
    font-size: 0.875rem;
    border-collapse: separate; /* Allows for spacing between rows */
    border-spacing: 0 0.5rem; /* Vertical spacing between rows */
}
.content-table thead th {
    padding: 0.75rem 1.5rem;
    text-align: left;
    font-weight: 600;
    color: var(--admin-text-secondary);
    border-bottom: 1px solid var(--admin-border);
}
.content-table tbody tr {
    background-color: var(--admin-card-bg);
    transition: all 0.2s ease;
}
.content-table tbody tr:hover {
    box-shadow: 0 4px 15px -5px rgba(0,0,0,0.08);
    transform: translateY(-2px);
}
.content-table tbody td {
    padding: 1rem 1.5rem;
    vertical-align: middle;
}
.content-table tbody td:first-child {
    border-top-left-radius: 0.5rem;
    border-bottom-left-radius: 0.5rem;
}
.content-table tbody td:last-child {
    border-top-right-radius: 0.5rem;
    border-bottom-right-radius: 0.5rem;
}

/* Status Pills */
.status-pill {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    font-size: 0.75rem;
    font-weight: 600;
    border-radius: 9999px;
}
.status-published {
    background-color: #D1FAE5; /* Green-100 */
    color: #065F46; /* Green-800 */
}
.status-draft {
    background-color: #FEF3C7; /* Yellow-100 */
    color: #92400E; /* Yellow-800 */
}

/* Action Buttons */
.action-buttons a, .action-buttons button {
    color: var(--admin-text-secondary);
    padding: 0.5rem;
    border-radius: 9999px;
    transition: all 0.2s ease;
}
.action-buttons a:hover, .action-buttons button:hover {
    background-color: #F3F4F6; /* gray-100 */
    color: var(--admin-text-primary);
}
.action-buttons .delete-btn:hover {
    color: #DC2626; /* red-600 */
}

.btn-primary {
    display: flex; /* <<-- ADD THIS */
    align-items: center; /* <<-- ADD THIS */
