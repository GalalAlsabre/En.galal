/* --- 12. Modal Base Styles --- */
.modal {
    display: none;
}
.modal.is-open {
    display: block;
}

/* The Overlay (The background layer) */
.modal__overlay {
    position: fixed;
    top: 0; left: 0; right: 0; bottom: 0;
    background: rgba(28, 25, 23, 0.6);
    backdrop-filter: blur(4px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 100; /* It's in the background */
}

/* The Container (The actual window) */
.modal__container {
    max-height: 90vh;
    overflow-y: auto;
    position: relative; /* CRITICAL: Allows z-index to work */
    z-index: 101;      /* CRITICAL: Puts the container ON TOP of the overlay */
}

/* The Close Button (Ã—) */
.modal__close {
    background: transparent;
    border: 0;
    cursor: pointer;
    padding: 0;
    color: var(--admin-text-secondary);
}
.modal__close:hover {
    color: var(--admin-text-primary);
}


