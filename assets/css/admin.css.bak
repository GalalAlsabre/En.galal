/* /assets/css/admin-colors.css */
:root {
    --admin-bg: #F8F7F6;
    --admin-card-bg: #FFFFFF;
    --admin-text-primary: #1C1917;
    --admin-text-secondary: #78716C;
    --admin-accent: #A37F5B;
    --admin-border: #E7E5E4;
    --font-admin: 'Inter', sans-serif;
}
body.admin-body {
    background-color: var(--admin-bg);
    color: var(--admin-text-primary);
    font-family: var(--font-admin);
}
.admin-body h1, .admin-body h2, .admin-body h3, .admin-body h4 {
    font-weight: 700;
    color: var(--admin-text-primary);
}


