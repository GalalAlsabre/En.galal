/*
  /assets/css/recipes.css
  (Styles for the Recipes Index Page)
*/

/* --- 1. Page Header --- */
.recipes-header {
    text-align: center;
    margin-bottom: 3rem;
}
.recipes-header h2 {
    font-size: 2.75rem; /* 44px */
}
.recipes-header p {
    font-size: 1.125rem; /* 18px */
    color: var(--c-text-subtle);
    max-width: 600px;
    margin: 1rem auto 0;
}

/* --- 2. Filter Bar --- */
.filter-bar {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 3rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--c-border);
}
.filter-selects {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
}
.filter-select {
    position: relative;
}
.filter-select select {
    -webkit-appearance: none;
    appearance: none;
    cursor: pointer;
    height: 2.75rem; /* 44px */
    border-radius: 8px;
    background-color: var(--c-bg-card-soft);
    border: 1px solid var(--c-border);
    padding-left: 1rem;
    padding-right: 2.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--c-text-body);
}
.filter-select select:focus {
    outline: none;
    border-color: var(--c-accent);
    box-shadow: 0 0 0 3px rgba(139, 94, 60, 0.2);
}
.filter-select .select-icon {
    position: absolute;
    right: 0.75rem;
    top: 50%;
 }
 
 .pagination a, .pagination span {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem; /* 40px */
    height: 2.5rem;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.2s ease;
    color: var(--c-text-body);
}
.pagination a:hover {
    background-color: var(--c-bg-card-soft);
    color: var(--c-text-heading);
}
.pagination .active {
    background-color: var(--c-accent);
    color: var(--c-text-on-dark);
    font-weight: 700;
}
.pagination .disabled {
    color: var(--c-text-subtle);
    cursor: not-allowed;
}