/* --- 5. Related Posts Section --- */
.related-posts-section {
    background-color: var(--c-bg-card-soft);
    padding: 4rem 1rem; /* Added horizontal padding for mobile */
    margin-top: 4rem;
    border-top: 1px solid var(--c-border);
}
@media(min-width: 768px) {
    .related-posts-section {
        padding: 4rem;
    }
}
.related-posts-section h2 {
    text-align: center;
    margin-bottom: 3rem;
}

/* THE CRITICAL FIX IS HERE */
.related-card {
    display: flex;          /* 1. Make the card a flex container */
    flex-direction: column; /* 2. Stack items vertically */
    height: 100%;           /* 3. Force card to fill the height of the grid row */
    
    /* Inherits background and border from .info-card in colors.css */
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.related-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 30px -10px rgba(74, 66, 59, 0.15) !important;
}

/* Fixed height for the image */
.related-card img {
  height: 180px; /* Fixed height for the image */
  width: 100%;
  object-fit: cover; /* Ensures image covers the area without distortion */
}

/* The text content area */
.related-card-content {
    padding: 1.25rem;
    flex-grow: 1; /* Allows this part to grow and fill remaining space */
    display: flex;
    flex-direction: column;
}
.related-card-content h3 {
    color: var(--c-text-heading);
}
.related-card-content p {
    color: var(--c-text-subtle);
    flex-grow: 1; /* Pushes the button (if any) to the bottom */
}
