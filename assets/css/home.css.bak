/* /assets/css/home.css (Corrected with animations and overlay) */


/* الكود المُعدَّل والنهائي */
.hero-section {
    background-color: var(--coffee-brown); /* <<-- هذا هو التعديل الوحيد المطلوب */
    color: var(--white);
    position: relative;
    overflow: hidden;
}
.hero-overlay {
    position: absolute; top: 0; left: 0; right: 0; bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="p" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="1" fill="rgba(255,255,255,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23p)"/></svg>');
    opacity: 0.3;
}
.hero-content { position: relative; z-index: 2; }

/* الكود المُعدَّل */
.hero-title { 
    font-size: 3.5rem; 
    font-weight: 700;
    color: var(--c-text-on-dark) !important; /* <<-- FIX: Uses the white text variable */
}
.hero-subtitle { 
    font-size: 1.3rem; 
    color: var(--c-text-on-dark) !important; /* <<-- FIX: Also uses the white text variable */
    opacity: 0.9; /* Adds a slight transparency */
}

.coffee-cup-illustration .fa-coffee {
    font-size: 12rem;
    color: rgba(255, 255, 255, 0.2);
    animation: float 4s ease-in-out infinite; /* Added animation */
}
@keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-15px); }
}

/* --- Other sections from tt.txt --- */
.feature-card {
    background: var(--white); border-radius: 12px; padding: 2.5rem 2rem; text-align: center;
    box-shadow: 0 10px 30px rgba(139, 69, 19, 0.1); border: 1px solid rgba(139, 69, 19, 0.1);
}
.feature-icon { font-size: 3rem; color: var(--coffee-brown); margin-bottom: 1.5rem; }
.feature-title { font-size: 1.5rem; color: var(--coffee-brown); margin-bottom: 1rem; }
.feature-card .btn-outline-primary {
    color: var(--coffee-brown); border-color: var(--coffee-brown); font-weight: 500;
    padding: 10px 24px; border-radius: 12px;
}
.feature-card .btn-outline-primary:hover { background-color: var(--coffee-brown); color: var(--white); }


/* الكود المُعدَّل */
.newsletter-section {
    background-color: var(--coffee-brown) !important; /* <<-- FIX: Uses the correct dark background variable */
    color: rgba(255, 255, 255, 0.8) !important;
}
.newsletter-section h2 { 
    color: var(--c-text-on-dark) !important; 
}
.newsletter-section p {
    color: rgba(255, 255, 255, 0.8) !important;
}

.newsletter-section {
    background-color: var(--coffee-brown);  color: rgba(255, 255, 255, 0.8);
}
.newsletter-section h2 { color: var(--white) !important; }
.newsletter-section .btn-primary {
    background-color: var(--coffee-brown); border-color: var(--coffee-brown); color: var(--white);
    border-radius: 0 12px 12px 0;
}

/* /assets/css/home.css (Corrected with Our Mission section) */


/* --- "Our Mission" Section (From tt.txt) --- */
.about-preview-section {
    background-color: var(--beige) !important;
    padding-top: 4rem;
    padding-bottom: 4rem;
}
.about-image { text-align: center; }
.coffee-beans-illustration {
    font-size: 6rem;
    color: var(--coffee-brown);
    opacity: 0.7;
}
.about-title {
    font-size: 2.2rem;
    color: var(--coffee-brown);
    margin-bottom: 1.5rem;
}
.about-description {
    font-size: 1.1rem;
    line-height: 1.7;
    margin-bottom: 1.5rem;
}
.about-preview-section .btn-primary {
    background-color: var(--coffee-brown);
    border-color: var(--coffee-brown);
    color: var(--white);
    padding: 12px 30px; border-radius: 12px;
}

/* --- CTA / Newsletter Section (From tt.txt) --- */
.cta-section {
    background: linear-gradient(135deg, var(--coffee-brown) 0%, var(--dark-brown) 100%);
    color: var(--white);
}
.cta-section h2 { color: var(--white) !important; }
.cta-section p { color: rgba(255, 255, 255, 0.9) !important; }