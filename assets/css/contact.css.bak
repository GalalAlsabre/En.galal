/* /assets/css/contact.css */

/* --- Form Input & Textarea General Styles --- */
.form-input {
  width: 100%;
  height: 3.5rem; /* 56px */
  padding: 0 1rem;
  border: 1px solid var(--c-border);
  border-radius: 8px;
  background-color: var(--c-bg-card);
  color: var(--c-text-body);
  font-family: 'Noto Sans', sans-serif;
  transition: all 0.2s ease-in-out;
}
.form-input::placeholder {
  color: var(--c-text-subtle);
}

/* --- Focus State --- */
.form-input:focus {
  outline: none;
  border-color: var(--c-accent);
  box-shadow: 0 0 0 3px rgba(139, 94, 60, 0.2); /* ظل ناعم بلون العلامة التجارية */
}

/* --- Error State (to be added by JS) --- */
.form-input.form-error {
  border-color: #E57373; /* A soft red for errors */
}
.form-input.form-error:focus {
  box-shadow: 0 0 0 3px rgba(229, 115, 115, 0.2);
}

/* --- Textarea Specifics --- */
.form-textarea {
  min-height: 10rem; /* 160px */
  padding-top: 1rem;
  resize: vertical; /* Allow vertical resize only */
}

/* --- Submit Button --- */
.btn-primary {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 3.5rem; /* 56px */
  border-radius: 8px;
  background-color: var(--c-accent);
  color: white;
  font-family: 'Noto Sans', sans-serif;
  font-weight: 700;
  transition: opacity 0.2s ease;
}
.btn-primary:hover {
  opacity: 0.9;
}

/* --- Success Message (Hidden by default) --- */
.success-message {
  display: none; /* Initially hidden */
  text-align: center;
  padding: 3rem 2rem;
  border: 1px solid var(--c-border);
  border-radius: 16px;
  background-color: var(--c-bg-card);
}