/* /assets/css/equipment.css (Professional Design V2) */

/* --- Fonts for this page --- */
h2, h3, h4 { font-family: 'Newsreader', serif; }

/* --- Search Bar --- */
.search-input {
    border-radius: 9999px; border: 1px solid var(--c-border); background-color: var(--c-bg-card);
    padding: 0.75rem 1rem 0.75rem 3rem; transition: all 0.2s ease-in-out;
}
.search-input:focus {
    outline: none; border-color: var(--c-accent); box-shadow: 0 0 0 4px rgba(161, 102, 47, 0.1);
}

/* --- Equipment Card --- */
.equipment-card {
    background-color: var(--c-bg-card); /* Use the whiter card background */
    border: 1px solid var(--c-border); border-radius: 1rem;
    transition: all 0.3s ease;
}
.equipment-card:hover {
    transform: translateY(-5px); box-shadow: 0 10px 30px -5px rgba(68, 56, 46, 0.1);
}
.equipment-card-image {
    aspect-ratio: 1 / 1; background-size: cover; background-position: center;
    transition: transform 0.3s ease;
}
.equipment-card:hover .equipment-card-image { transform: scale(1.05); }

/* --- THE CRITICAL BUTTON FIX --- */
.btn {
    padding: 0.5rem 1rem; border-radius: 0.5rem; font-size: 0.875rem;
    font-weight: 700; transition: all 0.2s ease;
}

/* Primary Button Style (View Details) - Solid and important */
.btn-primary {
    background-color: var(--c-accent); /* The warm, solid brown */
    color: white; /* White text for high contrast */
    border: 1px solid var(--c-accent);
}
.btn-primary:hover { opacity: 0.9; }

/* Secondary Button Style (Compare) - Subtle and clean */
.btn-secondary {
    background-color: var(--c-bg-card); /* Match the card background */
    border: 1px solid var(--c-border); /* Soft border */
    color: var(--c-text-body); /* Body text color */
}
.btn-secondary:hover { background-color: #F8F1E9; }

/* --- Modal Styles --- */
.modal { display: none; }
.modal.is-open { display: flex; }
.modal__overlay {
    position: fixed; top: 0; left: 0; right: 0; bottom: 0;
    background: rgba(24, 20, 17, 0.7); backdrop-filter: blur(4px);
    display: flex; align-items: center; justify-content: center; z-index: 999;
}
.modal__container {
    background-color: var(--c-bg-card); border-radius: 1rem;
    width: 100%; max-width: 42rem;
}